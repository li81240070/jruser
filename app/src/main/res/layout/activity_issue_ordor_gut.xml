<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.hx.jrperson.ui.activity.IssueOrdorGutActivity">

   <include layout="@layout/toolbar_view" />

    <!--竖版总滑动条-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--滑动条下总布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--标题栏-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backButton"
                    android:background="@mipmap/backbutton"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认订单"
                    android:textColor="#363636"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <!--灰色细线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8"
                />
            <!--维修地址及更改文字-->
            <LinearLayout
                android:id="@+id/inputAddressRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="39dp"
                        android:text=" 维修地址"
                        android:textColor="#adadad"
                        android:textSize="15sp"
                        android:layout_marginStart="39dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/nowAddressTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="3dp"
                        android:textColor="#343434"
                        android:text="更改"
                        android:textSize="15sp" />

                </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@mipmap/localpicture"/>

                    <TextView
                        android:id="@+id/addressTV"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        android:maxLines="2"
                        android:hint="请输入您需要维修的准确地址"
                        android:textColorHint="#adadad"
                        android:gravity="center_vertical"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        />

                    </LinearLayout>


            </LinearLayout>
            <!--大灰色分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@mipmap/colorline"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:id="@+id/myHomeLine"
                android:background="#f7f5f6"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0"/>

            <!--灰色细线-->
            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8"
                />
            <!--服务标准详细内容-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <com.hx.jrperson.views.PersonalListView
                    android:id="@+id/service_normLV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"

                    android:visibility="gone"/>


            </LinearLayout>


            <TextView
                android:id="@+id/titleMyHomeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="装修工程师免费上门量房、设计、报价"
                android:visibility="gone" />


            <com.hx.jrperson.views.PersonalListView
                android:id="@+id/issue_ordor_gutLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />
            <!--总价选项栏-->
            <RelativeLayout
                android:id="@+id/priceRL"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总价按品项最低价格计算"
                    android:textColor="#ffb06c"
                    android:textSize="15sp"
                    android:layout_marginRight="38dp"
                    android:layout_marginEnd="38dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <!--细分价格选项-->

            <!--总价格选项-->
            <RelativeLayout
                android:id="@+id/allPriceRL"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_negotiate_item"
                android:padding="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="总价"
                    android:textColor="@color/ordor_gut_data"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/allPriceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#339aff"
                    android:textSize="15sp"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/textView"
                    android:layout_toStartOf="@+id/textView" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=".00元"
                    android:gravity="center"
                    android:textColor="#339aff"
                    android:textSize="15sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/textView" />

            </RelativeLayout>
            <!--大灰色分割线-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:background="#f7f5f6"
                android:id="@+id/moHomeTe"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0"
                android:id="@+id/moHomeTe2"/>
            <!--预约时间选项-->
            <RelativeLayout
                android:id="@+id/changeTimeRL"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:padding="10dp">

                <TextView
                    android:id="@+id/showTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间"
                    android:textColor="#b8b8b8"
                    android:textSize="15sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/timeOrdorTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击选择时间"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <!--灰色细线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8"
                android:layout_marginBottom="5dp"
                />
            <!--指定匠人功能-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/apointWorker"


                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="指定匠人"
                    android:textColor="#b8b8b8"
                    android:textSize="15sp"
                    android:layout_alignTop="@+id/cenWrite"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />



                <EditText
                    android:gravity="center"
                    android:id="@+id/appointET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入工号"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:textColorHint="#333333"
                    android:inputType="number"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_clear"
                    android:visibility="gone" />

            </RelativeLayout>
            <!--指定匠人详细说明-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/toastTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="主要材料由客户事先准备好，如需高处作业，客户提供登高用具，匠人可以代买主材。"
                    android:textColor="#ffb06c"
                    android:textSize="12sp" />

            </RelativeLayout>
            <!--大灰色分割线-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:background="#f7f5f6"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0"/>
            <RelativeLayout
                android:id="@+id/describeLL"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="15dp">

                <EditText
                    android:id="@+id/userComminET"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|top"
                    android:hint="描述详情"
                    android:textSize="20sp"
                    android:textCursorDrawable="@null"
                    android:textColorHint="#333333"
                    android:background="@null"
                    android:maxLength="50"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/auxiliaryText"
                    android:layout_marginTop="5dp"
                    android:hint=" (不超过50字)"
                    android:textSize="15sp"
                    android:textColorHint="#9d9d9d"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/userComminET"
                    android:layout_toEndOf="@+id/userComminET" />

            </RelativeLayout>
            <!--大灰色分割线-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:background="#f7f5f6"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0"/>
            <!--添加图片选项-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="最多添加四张图片，长按可删除图片"
                    android:textColor="#d5d5d5"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/canclePhotoBtn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_send_ordor_btn"
                    android:text="取消"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:visibility="gone" />

            </RelativeLayout>
            <!--填选图片-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/addPhotoRV"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
            <!--灰色细线-->
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8"
                />
            <!--确认下单-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <ImageButton
                    android:id="@+id/creatBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/makesurebutton"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>




        </LinearLayout>






    </ScrollView>

</LinearLayout>
