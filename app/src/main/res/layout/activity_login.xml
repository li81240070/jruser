<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_zj_splac"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>

    <ImageView
        android:id="@+id/backMainIVBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_back" />

    <LinearLayout
        android:id="@+id/login_area_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_login_layout"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/accountLL"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shap_login_edit_background"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/loginInputPhoneET"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableLeft="@mipmap/ic_login_user"
                android:drawablePadding="10dp"
                android:hint="@string/login_use_hint"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shap_login_edit_background"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/loginInputPswET"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:digits="@string/string_input_type"
                android:drawableLeft="@mipmap/ic_login_password"
                android:drawablePadding="10dp"
                android:hint="@string/login_pwd_hint"
                android:inputType="textPassword"
                android:maxLength="12"
                android:singleLine="true"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_login_btn"
            android:text="@string/login_loginin"
            android:textColor="@color/color_yelow"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/gotoRegisterTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/login_area_LL"
        android:layout_marginTop="10dp"
        android:text="@string/login_register"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/forgetPswTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_below="@id/login_area_LL"
        android:layout_marginTop="10dp"
        android:text="@string/login_forgetpwd"
        android:textColor="@android:color/white" />


</RelativeLayout>
