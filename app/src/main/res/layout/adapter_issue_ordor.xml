<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="20dp"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_negotiate_item"
        android:layout_centerVertical="true"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ordor_subjectTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单水更换"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/ordor_gut_data"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_writ"
                android:layout_margin="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/unitPriceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50~80元"
                    android:textSize="15sp"
                    android:textColor="@color/ordor_gut_data"/>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <ImageButton
                        android:id="@+id/issue_subIB"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/ic_sub"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/addAndSubTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_centerInParent="true"
                        android:textColor="@color/toolbar"/>

                    <ImageButton
                        android:id="@+id/issue_addIB"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/ic_add"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>