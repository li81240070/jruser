<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.NewPwdActivity">

    <include layout="@layout/toolbar_view" />


    <LinearLayout
        android:id="@+id/intputOldPswLL"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <!--android:background="@drawable/shape_forget_psw_edit"-->
        <EditText
            android:id="@+id/inputOldPswET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/shape_forget_not_psw_edit"
            android:hint="请输入旧密码"
            android:maxLength="12"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:password="true"
            android:textColorHint="#d3d3d3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputNewPswET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/shape_forget_not_psw_edit"
            android:hint="请输入6-12位新密码"
            android:maxLength="12"
            android:paddingLeft="10dp"
            android:password="true"
            android:textColorHint="#d3d3d3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputTwoNewPswET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/shape_forget_not_psw_edit"
            android:hint="请再次输入新密码"
            android:maxLength="12"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:password="true"
            android:textColorHint="#d3d3d3" />

    </LinearLayout>

    <Button
        android:id="@+id/sureNewPswBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="30dp"
        android:background="@drawable/shape_forget_psw_btn"
        android:text="确定"
        android:textSize="18sp"
        android:textColor="@android:color/white" />

</LinearLayout>
